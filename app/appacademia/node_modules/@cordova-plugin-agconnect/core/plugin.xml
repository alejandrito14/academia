<plugin id="cordova-plugin-agc-core" version="1.2.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>core</name>

    <js-module name="AGCCorePlugin" src="www/AGCCorePlugin.js">
        <clobbers target="AGCCorePlugin" />
    </js-module>

    <platform name="android">
        <hook src="scripts/android/after_plugin_install.js" type="after_plugin_install" />
        <hook src="scripts/android/before_plugin_uninstall.js" type="before_plugin_uninstall" />

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="AGCCorePlugin">
                <param name="android-package" value="org.apache.cordova.agconnect.core.AGCCorePlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file parent="/*" target="AndroidManifest.xml" />
        <source-file src="src/android/AGCCorePlugin.java" target-dir="src/org/apache/cordova/agconnect/core" />

        <framework src="com.huawei.agconnect:agconnect-core:1.4.2.301" />

    </platform>

    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="AGCCorePlugin">
                <param name="ios-package" value="AGCCorePlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/AGCCorePlugin.h" />
        <source-file src="src/ios/AGCCorePlugin.m" />
        <header-file src="src/ios/AppDelegate+AGCCorePlugin.h" />
        <source-file src="src/ios/AppDelegate+AGCCorePlugin.m" />

        <podspec>
            <config>
            </config>
            <pods use-frameworks="true">
                <pod name="AGConnectCore" spec="1.2.1.300" />
            </pods>
        </podspec>

    </platform>

</plugin>